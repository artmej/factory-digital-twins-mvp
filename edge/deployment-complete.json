{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "smartfactoryregistry": {
                "username": "$CONTAINER_REGISTRY_USERNAME",
                "password": "$CONTAINER_REGISTRY_PASSWORD",
                "address": "smartfactoryregistry.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.4",
              "createOptions": "{}"
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.4",
              "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"5671/tcp\":[{\"HostPort\":\"5671\"}],\"8883/tcp\":[{\"HostPort\":\"8883\"}],\"443/tcp\":[{\"HostPort\":\"443\"}]}}}"
            },
            "env": {
              "OptimizeForPerformance": {
                "value": "false"
              },
              "MaxUpstreamBatchSize": {
                "value": "10"
              },
              "MaxUpstreamRetries": {
                "value": "3"
              },
              "StoreAndForwardConfiguration__TimeToLiveSecs": {
                "value": "3600"
              }
            }
          }
        },
        "modules": {
          "factorySimulator": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "smartfactoryregistry.azurecr.io/factory-simulator:1.0",
              "createOptions": "{\"HostConfig\":{\"LogConfig\":{\"Type\":\"json-file\",\"Config\":{\"max-size\":\"10m\",\"max-file\":\"3\"}}}}"
            },
            "env": {
              "TELEMETRY_INTERVAL": {
                "value": "30"
              },
              "SIMULATION_MODE": {
                "value": "realistic"
              }
            }
          },
          "smartFactoryML": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "smartfactoryregistry.azurecr.io/smart-factory-ml:1.0",
              "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"5000/tcp\":[{\"HostPort\":\"5000\"}]},\"LogConfig\":{\"Type\":\"json-file\",\"Config\":{\"max-size\":\"10m\",\"max-file\":\"3\"}}}}"
            },
            "env": {
              "INFERENCE_MODE": {
                "value": "edge"
              },
              "MODEL_VERSION": {
                "value": "v1.0.0-edge"
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "routes": {
          "factorySimulatorToML": "FROM /messages/modules/factorySimulator/outputs/* INTO BrokeredEndpoint(\"/modules/smartFactoryML/inputs/input1\")",
          "mlToIoTHub": "FROM /messages/modules/smartFactoryML/outputs/* INTO $upstream",
          "factorySimulatorToIoTHub": "FROM /messages/modules/factorySimulator/outputs/* INTO $upstream",
          "allToIoTHub": "FROM /messages/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 3600
        }
      }
    },
    "factorySimulator": {
      "properties.desired": {
        "telemetryInterval": 30,
        "simulationMode": "realistic",
        "devices": [
          "LINE_1_CNC_01",
          "LINE_1_ROBOT_01", 
          "LINE_1_CONV_01",
          "LINE_2_CNC_02",
          "LINE_2_ROBOT_02",
          "LINE_2_CONV_02",
          "LINE_3_CNC_03",
          "LINE_3_ROBOT_03",
          "LINE_3_CONV_03"
        ]
      }
    },
    "smartFactoryML": {
      "properties.desired": {
        "modelVersion": "v1.0.0-edge",
        "inferenceMode": "edge",
        "confidenceThreshold": 0.65,
        "maxPredictionAge": 300
      }
    }
  }
}